generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

enum Gender {
  MALE
  FEMALE
}

model User {
  id         String   @id @default(auto()) @map("_id") @db.ObjectId
  email      String   @unique
  password   String
  gender     Gender?
  image      String?
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
  name       String?
  isVerified Boolean  @default(false)
}
